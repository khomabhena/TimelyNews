<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PaymentOptions"
    tools:showIn="@layout/activity_payment_options">

    <TextView
        android:id="@+id/tv1"
        android:text="Once off payment"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv1a"
        android:text="get paid $9 for your story if it gets published."
        android:textSize="12sp"
        android:textColor="#7b7b7b"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view1"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/view1Click"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <TextView
        android:id="@+id/tv2"
        android:text="Monthly average"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv2a"
        android:text="get paid a percentage of your articles over total articles published for the month. Payment will be made on the 25th of the month in question."
        android:textSize="12sp"
        android:textColor="#7b7b7b"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view2"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/view2Click"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <TextView
        android:id="@+id/tv3"
        android:visibility="gone"
        android:text="Twitter"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv3a"
        android:visibility="gone"
        android:text="share with your followers on Twitter"
        android:textSize="12sp"
        android:textColor="#7b7b7b"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view3"
        android:visibility="gone"
        android:background="@color/line_divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <View
        android:id="@+id/view3Click"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>